<%= image_tag(@tvshow.cover_image)%>
<h5 class="show_name"><%= @tvshow.show_name%></h5>
<p><%= @tvshow.premiered%></p>
<% @tvshow.genres.each do |genre| %>
<h5><%= genre %></h5>
<%end%>
<% @tvshow.cast.first(8).each do |people|%>
