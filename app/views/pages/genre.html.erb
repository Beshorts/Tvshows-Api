<%= render 'shared/sidebar' %>

<div class="main-container ">
 <div class="container-fluid ">
  <div class="genres">
    <div class="header-pages">
      <% if genre_found? %>
      <h1>Results for category "<%= params[:genre] %>"</h1>
      <% end %>
    </div>
    <!--create helper if params don't match any Tv shows-->
    <% if genre_found? %>
    <%=render 'genre_cards'%>
    <% else %>
    <div class="not-found">
      <h1>Sorry... any match for your search</h1>
    </div>
    <% end %>
  </div> <!-- end  genres -->
 </div> <!-- end  container-fluid -->
</div> <!-- end main-container -->

<!-- remove bg color on container-fluid when there is no tvshows genre founded -->
<%= javascript_pack_tag 'change_bg' %>

<!-- add full height bg color on container-fluid if card-upcomings are less than 7 elements -->
<%= javascript_pack_tag 'add_bg_genres' %>
