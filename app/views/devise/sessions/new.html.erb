
<div class="container ">
  <div class="row ">
    <div class="col-xs-12 col-sm-4 offset-sm-4 col-md-8 offset-md-2 col-lg-8 offset-lg-2">
      <div class="form-login">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <h2>Log in</h2>
        <div class="form-inputs">
          <%= f.input :email,
          required: false,
          autofocus: true,
          input_html: { autocomplete: "email" }, placeholder: " banana@gmail.com" %>
          <%= f.input :password,
          required: false,
          input_html: { autocomplete: "current-password" }, placeholder: ".........." %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-primary" %>
        </div>
        <%= render "devise/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
